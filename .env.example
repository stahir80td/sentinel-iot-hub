# HomeGuard IoT Platform - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===========================================
# Google Gemini API (Beta Endpoint)
# ===========================================
# Endpoint: https://generativelanguage.googleapis.com/v1beta/models/{MODEL}:generateContent?key={KEY}

GEMINI_TEXT_API_KEY=your-gemini-api-key-here
GEMINI_VISION_API_KEY=your-gemini-api-key-here
GEMINI_TEXT_MODEL=gemini-pro-latest
GEMINI_VISION_MODEL=gemini-flash-latest

# ===========================================
# Database Credentials (for local dev)
# ===========================================
POSTGRES_PASSWORD=homeguard-postgres-2024
MONGO_PASSWORD=homeguard-mongo-2024
REDIS_PASSWORD=homeguard-redis-2024
TIMESCALE_PASSWORD=homeguard-timescale-2024

# ===========================================
# JWT Secret
# ===========================================
JWT_SECRET=homeguard-jwt-secret-change-in-production-2024
